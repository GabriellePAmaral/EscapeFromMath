function Nivel_1()
{
    var _op = global.dificuldade; // Usa a dificuldade global como operador
    var _num1 = 0;
    var _num2 = 0;
    var _correct_answer = 0;
    var _question = "";

    // 1. Definição da Operação e dos Limites com base na Dificuldade
    switch (_op)
    {
        case "Fácil": // Exemplo: Soma simples
            _num1 = irandom_range(0, 100);
            _num2 = irandom_range(0, 100);
            _correct_answer = _num1 + _num2;
            _question = "Quanto é " + string(_num1) + " + " + string(_num2) + "?";
            break;
            
        case "Médio": // Exemplo: Multiplicação simples
            _num1 = irandom_range(0, 9);
            _num2 = irandom_range(0, 9);
            _correct_answer = _num1 * _num2;
            _question = "Quanto é " + string(_num1) + " x " + string(_num2) + "?";
            break;
            
        case "Difícil": // Exemplo: Potenciação simples
            _num1 = irandom_range(0, 12); // Base
            _num2 = 2; // Expoente fixo (quadrado)
            _correct_answer = power(_num1, _num2); // power(base, expoente)
            _question = "Quanto é " + string(_num1) + "²?"; // Usando '²'
            break;
            
        default:
            // Caso a dificuldade não esteja definida, volta para o Fácil
            _correct_answer = 10;
            _question = "Erro de Dificuldade. Digite 10.";
            break;
    }

    // 2. Pergunta ao usuário
    var resposta = get_integer(_question, 0); 

	// 3. Verificação da Resposta
	if (resposta == _correct_answer) 
	{
		
    // AÇÃO DE SUCESSO
    
    // 1. Mensagem de Confirmação (Opcional)
    show_message("Correto! Avançando para o próximo nível.");
    
    // 2. AVANÇA PARA A PRÓXIMA ROOM
    room_goto(Nivel_2_SalaAbandonada); 
    
    return true; 
	} 
	else 
	{
		
    // AÇÃO DE FALHA
    
    // 1. Mensagem de Confirmação (Opcional, mas útil)
    show_message("Errado! A resposta correta era " + string(_correct_answer) + ". Game Over.");
    
    // 2. AVANÇA PARA A TELA DE DERROTA
    room_goto(Cena5); 
    
    return false; 
	}
}
